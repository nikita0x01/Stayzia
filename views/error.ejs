<% layout("/layouts/boilerplate") %>
<div class="row" style="margin-top: 30px; display: flex; justify-content: center;">
  <div class="alert alert-danger" role="alert"
       style="border: 2px solid #f5c2c7; border-radius: 12px; background-color: #f8d7da; color: #842029; padding: 20px 25px; box-shadow: 0 6px 12px rgba(0,0,0,0.15); max-width: 600px; width: 100%; text-align: center;">
       
    <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Danger:"
         style="width: 28px; height: 28px; vertical-align: middle; fill: currentColor;">
      <use xlink:href="#exclamation-triangle-fill"/>
    </svg>

    <h4 class="alert-heading" style="font-weight: 600; margin: 0; font-size: 1.25rem;">
      <%= message %>
    </h4>

  </div>
</div>

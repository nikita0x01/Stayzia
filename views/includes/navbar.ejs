<style>
  /* Enhanced Search Button */
  .btn-search {
    background-color: #fe424d;
    color: white;
    border: none;
    border-radius: 25px;
    padding: 0.6rem 1.4rem;
    font-size: 1rem;
    font-weight: 500;
    display: inline-flex; /* aligns icon + text nicely */
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 10px rgba(254, 66, 77, 0.3);
  }

  .btn-search:hover {
    background-color: #e33b45;
    transform: translateY(-2px);
    box-shadow: 0 6px 14px rgba(254, 66, 77, 0.4);
  }

  .btn-search:active {
    transform: scale(0.97);
  }

  .btn-search i {
    display: inline-block;
    margin-right: 0.5rem;
    font-size: 1.1rem;
    vertical-align: middle;
  }

  /* Search Input Field */
  .search-inp {
    border-radius: 25px;
    padding: 0.6rem 1rem;
    border: 1.5px solid #ccc;
    font-size: 1rem;
    outline: none;
    transition: all 0.3s ease;
  }

  .search-inp:focus {
    border-color: #fe424d;
    box-shadow: 0 0 5px rgba(254, 66, 77, 0.4);
  }

  /* Optional: input + button container for alignment */
  .search-bar {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }
</style>


